{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "test.schema.json",
  "title": "Test Definition",
  "description": "Schema for individual goroutinectx test definition",
  "type": "object",
  "required": ["title", "targets", "level", "variants"],
  "additionalProperties": false,
  "properties": {
    "title": {
      "type": "string",
      "description": "Human-readable test title (heading-like)",
      "minLength": 1
    },
    "targets": {
      "type": "array",
      "description": "List of checker targets this test applies to",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1
    },
    "level": {
      "type": "string",
      "description": "Test file name without .go extension (e.g., basic, advanced, evil, or target name for single-file targets)",
      "minLength": 1
    },
    "variants": {
      "type": "object",
      "description": "Map of variant name to variant definition (null means variant not applicable)",
      "additionalProperties": {
        "oneOf": [
          { "$ref": "#/$defs/variant" },
          { "type": "null" }
        ]
      },
      "minProperties": 1
    }
  },
  "$defs": {
    "variant": {
      "type": "object",
      "required": ["description", "functions"],
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string",
          "description": "Explanatory description of this variant",
          "minLength": 1
        },
        "functions": {
          "type": "object",
          "description": "Map of target to function name",
          "additionalProperties": {
            "type": "string",
            "minLength": 1
          },
          "minProperties": 1
        }
      }
    }
  }
}
